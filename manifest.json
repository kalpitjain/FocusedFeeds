{
  "manifest_version": 3,
  "name": "YouTube Shorts Remover",
  "version": "1.0.0",
  "description": "Removes YouTube Shorts from your YouTube experience",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ]
}

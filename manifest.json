{
  "manifest_version": 3,
  "name": "FocusedFeeds",
  "version": "1.0.0",
  "description": "Removes YouTube Shorts and Instagram Reels from your browsing experience",
  "permissions": [],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ]
}
